{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Toutes les catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    {% for category in categories %}
        <div>
            <h2 class="card-title">{{ loop.index }} - {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}" class="card-link">Voir les programmes</a>        </div>
    {% endfor %}
    <div><a href="{{ path('category_new') }}">
            Ajouter une catégorie
        </a></div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
