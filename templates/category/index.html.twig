{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Toutes les catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    {% for category in categories %}
        <div>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ loop.index }} / {{ category.name }}</a>
        </div>
    {% else %}
        Pas de catégories trouvées
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}