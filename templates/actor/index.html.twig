{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Tous les Acteurs{% endblock %}

{% block body %}
    <h1>Tout les acteurs:</h1>
    {% for actor in actors %}
        <div>
            <h2>{{ loop.index }} / {{ actor.name }}</h2>
            <a href="{{ path("actor_show", { id: actor.id }) }}">Voir la fiche de l'acteur</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}




{% endblock %}
